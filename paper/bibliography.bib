	author = {Ngo, Henry and Knutson, Heather A. and Hinkley, Sasha and Bryan, Marta and Crepp, Justin R. and Batygin, Konstantin and Crossfield, Ian and Hansen, Brad and Howard, Andrew W. and Johnson, John A. and Mawet, Dimitri and Morton, Timothy D. and Muirhead, Philip S. and Wang, Ji},
	month = aug,
	year = {2016},
	keywords = {binaries: close, binaries: eclipsing, methods: observational, planetary systems, planets and satellites: dynamical evolution and stability, techniques: high angular resolution},
	pages = {8},
	file = {Full Text PDF:/home/luke/local/Zotero/storage/SV4WGSZD/Ngo et al. - 2016 - Friends of Hot Jupiters. IV. Stellar Companions Be.pdf:application/pdf}
}


